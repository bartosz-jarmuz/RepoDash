<UserControl x:Class="RepoDash.App.Controls.RepoGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:services="clr-namespace:RepoDash.App.Services"
             xmlns:vm="clr-namespace:RepoDash.App.ViewModels"
             xmlns:controls="clr-namespace:RepoDash.App.Controls" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:RepoDash.App.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:RepoGroupViewModel}">
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/RepoDash.App;component/Themes/Colors.xaml"/>
        <ResourceDictionary Source="/RepoDash.App;component/Themes/Styles.xaml"/>
      </ResourceDictionary.MergedDictionaries>

      <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
      <!-- New: converters for group header -->
      <converters:GroupHeaderBackgroundConverter x:Key="GroupHeaderBackgroundConverter"/>
    </ResourceDictionary>
  </UserControl.Resources>

  <Border Style="{StaticResource Card}">
    <DockPanel>

      <!-- Colored header -->
      <Border x:Name="HeaderDragHandle"
              DockPanel.Dock="Top"
              CornerRadius="6"
              Padding="6"
              Margin="0,0,0,8">
        <Border.Background>
          <MultiBinding Converter="{StaticResource GroupHeaderBackgroundConverter}">
            <Binding Path="."/>
            <Binding Source="{x:Static services:SettingsChangeNotifier.Default}" Path="Version"/>
          </MultiBinding>
        </Border.Background>

        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>

          <TextBlock Text="{Binding GroupKey}"
                     VerticalAlignment="Center"
                     FontWeight="Bold"/>

          <Button Grid.Column="1"
                  Width="18"
                  Height="17"
                  Margin="4,0,0,0"
                  Style="{StaticResource IconFlatButton}"
                  Click="OptionsButton_Click"
                  ToolTip="Group options"
                  Focusable="False">
            <Button.ContextMenu>
              <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                <MenuItem Header="Change color..." Command="{Binding ChangeColorCommand}"/>
                <MenuItem Header="Reset color" Command="{Binding ResetColorCommand}" IsEnabled="{Binding CanResetColor}"/>
                <Separator Visibility="{Binding ShowVisibilityToggleOption, Converter={StaticResource BoolToVisibility}}"/>
                <MenuItem Header="{Binding ToggleVisibilityLabel}"
                          Command="{Binding ToggleVisibilityCommand}"
                          Visibility="{Binding ShowVisibilityToggleOption, Converter={StaticResource BoolToVisibility}}"/>
              </ContextMenu>
            </Button.ContextMenu>
            <Path Width="14"
                  Height="14"
                  Stretch="Uniform"
                  Stroke="{StaticResource BrushTextMain}"
                  StrokeThickness="1.5"
                  StrokeStartLineCap="Round"
                  StrokeEndLineCap="Round"
                  Data="M1,4 H11 M1,7 H11 M1,10 H11"/>
          </Button>
        </Grid>
      </Border>

      <ListBox ItemsSource="{Binding Items}"
               ScrollViewer.VerticalScrollBarVisibility="Auto"
               ScrollViewer.HorizontalScrollBarVisibility="Disabled"
               HorizontalContentAlignment="Stretch"
               ClipToBounds="True"
               Height="{Binding VisibleItemCount, Converter={StaticResource ItemCountToHeight}}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <controls:RepoItem DataContext="{Binding}" AllowPinning="{Binding DataContext.AllowPinning, RelativeSource={RelativeSource AncestorType=controls:RepoGroup}}"/>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </DockPanel>
  </Border>
</UserControl>
