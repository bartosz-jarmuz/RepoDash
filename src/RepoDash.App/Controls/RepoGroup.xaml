<UserControl x:Class="RepoDash.App.Controls.RepoGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:RepoDash.App.ViewModels"
             xmlns:controls="clr-namespace:RepoDash.App.Controls" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:RepoGroupViewModel}">
  <Border Style="{StaticResource Card}">
    <DockPanel>
      <TextBlock DockPanel.Dock="Top" Text="{Binding GroupKey}"
                 FontWeight="Bold" Margin="0,0,0,8"/>

      <ListBox ItemsSource="{Binding Items}"
               ScrollViewer.VerticalScrollBarVisibility="Auto"
               Height="{Binding Settings.ListItemVisibleCount, Converter={StaticResource ItemCountToHeight}}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <controls:RepoItem DataContext="{Binding}" AllowPinning="{Binding DataContext.AllowPinning, RelativeSource={RelativeSource AncestorType=controls:RepoGroup}}"/>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </DockPanel>
  </Border>
</UserControl>
