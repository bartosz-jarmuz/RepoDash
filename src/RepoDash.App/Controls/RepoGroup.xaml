<UserControl x:Class="RepoDash.App.Controls.RepoGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:services="clr-namespace:RepoDash.App.Services"
             xmlns:vm="clr-namespace:RepoDash.App.ViewModels"
             xmlns:controls="clr-namespace:RepoDash.App.Controls" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:RepoDash.App.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:RepoGroupViewModel}">
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/RepoDash.App;component/Themes/Colors.xaml"/>
        <ResourceDictionary Source="/RepoDash.App;component/Themes/Styles.xaml"/>
      </ResourceDictionary.MergedDictionaries>

      <!-- New: converters for group header -->
      <converters:GroupHeaderBackgroundConverter x:Key="GroupHeaderBackgroundConverter"/>
    </ResourceDictionary>
  </UserControl.Resources>

  <Border Style="{StaticResource Card}">
    <DockPanel>

      <!-- Colored header -->
      <Border DockPanel.Dock="Top"
              CornerRadius="6"
              Padding="6"
              Margin="0,0,0,8">
        <Border.Background>
          <MultiBinding Converter="{StaticResource GroupHeaderBackgroundConverter}">
            <Binding Path="."/>
            <Binding Source="{x:Static services:SettingsChangeNotifier.Default}" Path="Version"/>
          </MultiBinding>
        </Border.Background>

        <TextBlock Text="{Binding GroupKey}"
                   FontWeight="Bold"/>
      </Border>

      <ListBox ItemsSource="{Binding Items}"
               ScrollViewer.VerticalScrollBarVisibility="Auto"
               Height="{Binding Settings.ListItemVisibleCount, Converter={StaticResource ItemCountToHeight}}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <controls:RepoItem DataContext="{Binding}" AllowPinning="{Binding DataContext.AllowPinning, RelativeSource={RelativeSource AncestorType=controls:RepoGroup}}"/>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </DockPanel>
  </Border>
</UserControl>
