<UserControl x:Class="RepoDash.App.Controls.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:RepoDash.App.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:StatusBarViewModel}">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StatusBar Grid.Row="0"
               Background="{DynamicResource BrushCardBg}"
               BorderBrush="{DynamicResource BrushBorder}"
               BorderThickness="0,1,0,0">
      <StatusBarItem>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
          <TextBlock Text="{Binding Message}"
                     Foreground="{DynamicResource BrushTextSubtle}"
                     TextTrimming="CharacterEllipsis" />
          <StackPanel Orientation="Horizontal"
                      Margin="12,0,0,0"
                      VerticalAlignment="Center"
                      Visibility="{Binding IsProgressVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar Width="220"
                         Height="14"
                         Minimum="0"
                         Maximum="1"
                         Value="{Binding ProgressValue}"
                         IsIndeterminate="{Binding IsProgressIndeterminate}" />
            <TextBlock Margin="8,0,0,0"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource BrushTextSubtle}"
                       Text="{Binding ProgressDisplay}"
                       Visibility="{Binding IsProgressDetailsVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
          </StackPanel>
        </StackPanel>
      </StatusBarItem>

      <StatusBarItem>
        <TextBlock Text="{Binding SummaryDisplay}"
                   Margin="24,0,0,0"
                   Foreground="{DynamicResource BrushTextSubtle}"
                   VerticalAlignment="Center" />
      </StatusBarItem>

      <StatusBarItem HorizontalAlignment="Right">
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
          <Button Content="{Binding ErrorSummary}"
                  Command="{Binding ToggleErrorDetailsCommand}" FontWeight="Bold" Background="IndianRed"
                  Padding="8,2"
                  Margin="4,0,8,0" />
          <Button Content="Dismiss"
                  Command="{Binding DismissErrorCommand}"
                  Padding="8,2" />
        </StackPanel>
      </StatusBarItem>
    </StatusBar>

    <Border Grid.Row="1"
            Margin="0,6,0,0"
            Padding="8"
            BorderBrush="{DynamicResource BrushBorder}"
            BorderThickness="0,1,0,0"
            Background="{DynamicResource BrushWindowBg}"
            Visibility="{Binding IsErrorExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
      <ScrollViewer VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    MaxHeight="150">
        <TextBox Text="{Binding ErrorDetails}" IsReadOnly="True"
                   TextWrapping="Wrap" />
      </ScrollViewer>
    </Border>
  </Grid>
</UserControl>
