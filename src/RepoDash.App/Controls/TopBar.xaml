<UserControl x:Class="RepoDash.App.Controls.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:RepoDash.App.Controls"
             xmlns:vm="clr-namespace:RepoDash.App.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:MainViewModel}">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <!-- Search (its own VM) -->
    <controls:SearchBar Grid.Column="0" Margin="0,0,8,0"
                        DataContext="{Binding SearchBar}" />

    <!-- List height -->
    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
      <TextBlock Text="List Height:" Margin="0,0,6,0" VerticalAlignment="Center" />
      <xctk:IntegerUpDown
        Value="{Binding Settings.ListItemVisibleCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=1,
                  ValidatesOnExceptions=False}" Width="60"
        Height="36" Minimum="1" Maximum="300" ClipValueToMinMax="True"
        AllowTextInput="True"
        ValueChanged="OnLayoutMetricChanged" />
    </StackPanel>

    <!-- Panel width -->
    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
      <TextBlock Text="Panel Width:" Margin="0,0,6,0" VerticalAlignment="Center" />
      <xctk:IntegerUpDown Value="{Binding Settings.GroupPanelWidth,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=10,
                  ValidatesOnExceptions=False}"
                          Width="80" Height="36" Minimum="10" Maximum="900" ClipValueToMinMax="True"
                          AllowTextInput="True"
                          ValueChanged="OnLayoutMetricChanged"/>
    </StackPanel>

    <controls:RepoRoot Grid.Column="4" Margin="0,0,8,0"
                       DataContext="{Binding RepoRoot}" />

    <controls:GlobalGitOperationsMenu Grid.Column="5" VerticalAlignment="Center"
                                      DataContext="{Binding GlobalGitOperations}" />

    <!-- Settings / Git menu (its own VM) -->
    <controls:SettingsMenu Grid.Column="6" VerticalAlignment="Center"
                           DataContext="{Binding SettingsMenu}" />
  </Grid>
</UserControl>
