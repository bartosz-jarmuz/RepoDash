<UserControl x:Class="RepoDash.App.Controls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MinWidth="90">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <TextBox Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
             HorizontalContentAlignment="Right" Padding="6" />
    <StackPanel Grid.Column="1" Orientation="Vertical">
      <Button Padding="2" Click="Up_Click">▲</Button>
      <Button Padding="2" Click="Down_Click">▼</Button>
    </StackPanel>
  </Grid>
</UserControl>