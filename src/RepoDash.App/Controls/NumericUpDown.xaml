<UserControl x:Class="RepoDash.App.Controls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="28">
    <Border Background="{DynamicResource PanelBackgroundBrush}" BorderBrush="{DynamicResource PanelBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="24" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="ValueTextBox"
                     BorderThickness="0"
                     Background="Transparent"
                     TextAlignment="Right"
                     VerticalContentAlignment="Center"
                     Margin="0"
                     Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" />
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="2,0,0,0">
                <RepeatButton Content="?" Height="10" Margin="0,0,0,2" Click="OnIncrement" />
                <RepeatButton Content="?" Height="10" Click="OnDecrement" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
