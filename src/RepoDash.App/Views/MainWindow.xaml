<Window x:Class="RepoDash.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:RepoDash.App.Controls"
        xmlns:converters="clr-namespace:RepoDash.App.Converters"
        xmlns:vm="clr-namespace:RepoDash.App.ViewModels"
        Title="RepoDash" Width="1200" Height="800"
        >
  <DockPanel>
    <!-- Top bar as a single control; it composes child controls -->
    <controls:TopBar DockPanel.Dock="Top" DataContext="{Binding}" Margin="10"/>
    <!-- Repo area -->
    <controls:RepoGroups DataContext="{Binding RepoGroups}"/>
  </DockPanel>
</Window>
