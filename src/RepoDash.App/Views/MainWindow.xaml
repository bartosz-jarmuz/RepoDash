<Window x:Class="RepoDash.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:RepoDash.App.Controls"
        xmlns:behaviors="clr-namespace:RepoDash.App.Behaviors"
        xmlns:cmds="clr-namespace:RepoDash.App.Commands"
        Title="{Binding WindowTitle}"
        Width="1200"
        Height="800"
        behaviors:WindowPlacementBehavior.Cache="{StaticResource WindowPlacementCache}"
        behaviors:GlobalHotkeyBehavior.Hotkey="{Binding Settings.GlobalHotkey}"
        behaviors:GlobalHotkeyBehavior.Command="{Binding FocusSearchCommand}"
        behaviors:TrayBehavior.Enabled="{Binding Settings.CloseToTray}"
        behaviors:TrayBehavior.ShowCommand="{Binding FocusSearchCommand}"
        behaviors:WindowRestoreFocusBehavior.Command="{Binding FocusSearchCommand}"
        >
  <Window.InputBindings>
    <KeyBinding
      Modifiers="Control"
      Key="F"
      Command="{x:Static cmds:FocusElementCommand.Instance}"
      CommandParameter="FilterTextBox" />
  </Window.InputBindings>
  <DockPanel>
    <!-- Top bar as a single control; it composes child controls -->
    <controls:TopBar DockPanel.Dock="Top" DataContext="{Binding}" Margin="10"/>
    <!-- Repo area -->
    <controls:RepoGroups DataContext="{Binding RepoGroups}"/>
  </DockPanel>
</Window>
