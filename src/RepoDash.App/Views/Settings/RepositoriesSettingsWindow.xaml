<Window x:Class="RepoDash.App.Views.Settings.RepositoriesSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:RepoDash.App.ViewModels.Settings"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:RepositoriesSettingsViewModel}"
        Title="Repositories Settings" Width="820" Height="560" WindowStartupLocation="CenterOwner">
  <DockPanel Margin="10">
    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button Command="{Binding SaveCommand}" Width="90" Margin="0,0,8,0">Save</Button>
      <Button Command="{Binding CancelCommand}" Width="90">Cancel</Button>
    </StackPanel>

    <xctk:PropertyGrid SelectedObject="{Binding Model}"
                       AutoGenerateProperties="True"
                       IsCategorized="True"/>
  </DockPanel>
</Window>
