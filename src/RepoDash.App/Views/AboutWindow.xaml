<Window x:Class="RepoDash.App.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About RepoDash"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        MinWidth="420"
        MinHeight="220">
  <Border Padding="20" Background="{StaticResource BrushWindowBg}">
    <StackPanel>
      <TextBlock Text="{Binding ApplicationName}"
                 FontSize="20"
                 FontWeight="Bold"
                 Margin="0,0,0,8"/>
      <TextBlock Text="{Binding ApplicationVersion, StringFormat=Version: {0}}"
                 Margin="0,0,0,12"
                 Foreground="{StaticResource BrushTextSubtle}"/>
      <TextBlock Text="{Binding Description}"
                 TextWrapping="Wrap"
                 Margin="0,0,0,12"/>
      <TextBlock>
        <Run Text="Project home: " />
        <Hyperlink Command="{Binding OpenRepositoryCommand}">
          <Run Text="{Binding GitHubUrl, Mode=OneTime}" />
        </Hyperlink>
      </TextBlock>
      <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Right"
                  Margin="0,20,0,0">
        <Button Content="Close"
                Width="80"
                IsDefault="True"
                Command="{Binding CloseCommand}" />
      </StackPanel>
    </StackPanel>
  </Border>
</Window>
