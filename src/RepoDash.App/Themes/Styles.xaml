<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Window & typography -->
  <Style TargetType="Window">
    <Setter Property="Background" Value="{StaticResource BrushWindowBg}"/>
    <Setter Property="Foreground" Value="{StaticResource BrushTextMain}"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
    <Setter Property="FontSize" Value="13"/>
  </Style>

  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource BrushTextMain}"/>
    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
  </Style>

  <!-- Inputs -->
  <Style TargetType="TextBox">
    <Setter Property="Foreground" Value="{StaticResource BrushTextMain}"/>
    <Setter Property="Background" Value="#FFFFFFFF"/>
    <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="6"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
  </Style>

  <!-- Buttons -->
  <Style TargetType="Button">
    <Setter Property="Foreground" Value="{StaticResource BrushTextMain}"/>
    <Setter Property="Background" Value="#FFF5F7FA"/>
    <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="6,4"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="6">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="Background" Value="#FFEFF3F7"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter Property="Background" Value="#FFE6EBF2"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Icon-only flat button (for clear/browse/refresh etc.) -->
  <Style x:Key="IconFlatButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
    <Setter Property="Padding" Value="6"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border Background="{TemplateBinding Background}" CornerRadius="6">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="Background" Value="#FFF1F4F8"/>
              <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
              <Setter Property="BorderThickness" Value="1"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter Property="Background" Value="#FFE8ECF2"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Lists -->
  <Style TargetType="ListBox">
    <Setter Property="Foreground" Value="{StaticResource BrushTextMain}"/>
    <Setter Property="Background" Value="{StaticResource BrushWindowBg}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
  </Style>

  <Style TargetType="ListBoxItem">
    <Setter Property="Padding" Value="6"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="{StaticResource BrushTextMain}"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="ListBoxItem">
          <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6">
            <ContentPresenter/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="#FFF4F7FB"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="#FFE9F0FB"/>
              <Setter Property="BorderBrush" Value="{StaticResource BrushAccent}"/>
              <Setter Property="BorderThickness" Value="1"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Cards -->
  <Style x:Key="Card" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource BrushCardBg}"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Padding" Value="8"/>
    <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>

  <!-- Menu -->
  <Style TargetType="Menu">
    <Setter Property="Background" Value="{StaticResource BrushWindowBg}"/>
  </Style>
  <Style TargetType="MenuItem">
    <Setter Property="Padding" Value="6,4"/>
  </Style>
</ResourceDictionary>
